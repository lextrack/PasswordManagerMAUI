<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManager.LoginPage"
             NavigationPage.HasBackButton="False"
             Title="Login">

    <Grid>
        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">
            <Frame CornerRadius="8" Padding="10">
                <Entry x:Name="UsernameEntry" Placeholder="Username" FontSize="18" />
            </Frame>

            <Frame CornerRadius="8" Padding="10">
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" FontSize="18" />
            </Frame>

            <Button Text="Login"
                    Clicked="OnLoginClicked"
                    Pressed="OnButtonPressed"
                    Released="OnButtonReleased"
                    HorizontalOptions="Fill"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="20,10"/>

            <Button Text="Register"
                    Clicked="OnRegisterClicked"
                    Pressed="OnButtonPressed"
                    Released="OnButtonReleased"
                    HorizontalOptions="Fill"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="20,10"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>