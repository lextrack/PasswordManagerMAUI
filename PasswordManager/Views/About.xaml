<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManager.Views.About"
             Title="About">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Frame BackgroundColor="#2A2A2A"
                   BorderColor="#333333"
                   CornerRadius="8"
                   Padding="20"
                   HasShadow="True">

                <VerticalStackLayout Spacing="12">
                    <Image Source="iconabout.png"
                           HeightRequest="40"
                           WidthRequest="40"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"/>

                    <Label Text="Simple Password Manager"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <Label Text="v1.0.0"
                           TextColor="#CCCCCC"
                           FontSize="14"/>

                    <Label Text="Simple Password Manager is an open-source password manager for Windows and Android."
                           TextColor="#CCCCCC"
                           FontSize="14"/>

                    <Label Text="Original author: Lextrack."
                           TextColor="#CCCCCC"
                           FontSize="14"/>

                    <VerticalStackLayout Spacing="1">
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="You can find this project on "
                                          TextColor="#CCCCCC"
                                          FontSize="14"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label TextColor="#2196F3"
                               FontSize="14"
                               TextDecorations="Underline">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenGitHubCommand}"/>
                            </Label.GestureRecognizers>
                            <Label.Text>https://github.com/lextrack/PasswordManagerMAUI</Label.Text>
                        </Label>
                        <Label Text="keep an eye on this project, more updates coming soon!"
                               TextColor="#CCCCCC"
                               FontSize="14"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="1" Margin="0,10,0,0">
                        <Label Text="If you like the project, you can support it on PayPal:"
                               TextColor="#CCCCCC"
                               FontSize="14"/>
                        <Label TextColor="#2196F3"
                               FontSize="14"
                               TextDecorations="Underline">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenPayPalCommand}"/>
                            </Label.GestureRecognizers>
                            <Label.Text>https://www.paypal.me/lextrack</Label.Text>
                        </Label>
                    </VerticalStackLayout>

                    <Label Text="This software is made possible by:"
                           TextColor="#CCCCCC"
                           FontSize="14"
                           Margin="0,8,0,0"/>

                    <Label Text=".NET MAUI and Flaticon."
                           TextColor="#CCCCCC"
                           FontSize="14"/>

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>