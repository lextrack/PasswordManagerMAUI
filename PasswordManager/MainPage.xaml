<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManager.MainPage"
             NavigationPage.HasBackButton="False"
             Title="Password Manager">

    <Grid>
        
        <Grid Padding="10" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Text="Logout"
                    Clicked="OnLogoutClicked"
                    BackgroundColor="Red"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="10,5"
                    FontSize="14"/>
        </Grid>

        <!-- Passowrd list -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10" Spacing="15">
                <CollectionView x:Name="PasswordsList"
                              ItemsSource="{Binding Passwords}"
                              SelectionMode="Single"
                              SelectionChanged="OnPasswordSelected"
                              Margin="0,0,0,10">
                    <CollectionView.EmptyView>
                        <Grid VerticalOptions="Center" 
                              HeightRequest="200">
                            <VerticalStackLayout HorizontalOptions="Center" 
                                               VerticalOptions="Center" 
                                               Spacing="10">
                                <Label Text="No passwords saved yet" 
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                       FontSize="12"
                                       FontAttributes="Bold"/>
                                <Label Text="Click 'Add New Password' to get started" 
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                                       FontSize="13"/>
                            </VerticalStackLayout>
                        </Grid>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="8" Padding="10" Margin="0,10">
                                <Grid>
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnPasswordSelected" CommandParameter="{Binding .}"/>
                                    </Grid.GestureRecognizers>
                                    <Grid ColumnDefinitions="*, Auto, Auto" ColumnSpacing="5">
                                        <StackLayout Grid.Column="0" Spacing="3">
                                            <Label Text="{Binding Service}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                                            <Label Text="{Binding Username}" 
                                                   FontSize="14"
                                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                                            <Label Text="{Binding CensoredPassword}" 
                                                   FontSize="14"
                                                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                                        </StackLayout>

                                        <ImageButton Grid.Column="1"
                                                    Source="copy_icon.png"
                                                    HeightRequest="32"
                                                    WidthRequest="32"
                                                    CommandParameter="{Binding .}"
                                                    Clicked="OnCopyPasswordClicked"
                                                    BackgroundColor="Transparent"/>

                                        <ImageButton Grid.Column="2"
                                                    Source="delete_icon.png"
                                                    HeightRequest="32"
                                                    WidthRequest="32"       
                                                    CommandParameter="{Binding .}"
                                                    Clicked="OnDeletePasswordClicked"
                                                    BackgroundColor="Transparent"/>
                                    </Grid>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Indicator -->
        <Grid x:Name="LoadingGrid" 
              Grid.Row="0" 
              Grid.RowSpan="3" 
              BackgroundColor="#020202" 
              IsVisible="True">

            <VerticalStackLayout HorizontalOptions="Center" 
                               VerticalOptions="Center" 
                               Spacing="10">
                <ActivityIndicator IsRunning="True" 
                                 Color="#007AFF" 
                                 HeightRequest="50" 
                                 WidthRequest="50"/>
                <Label Text="Loading passwords..." 
                       TextColor="White" 
                       FontSize="16" 
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Container buttons -->
        <VerticalStackLayout Grid.Row="2"
                             Padding="10"
                             Spacing="3"
                             VerticalOptions="End">

            <!-- Add password -->
            <Button Text="Add New Password"
                    SemanticProperties.Hint="Add a new password entry"
                    Clicked="OnAddPasswordClicked"
                    Pressed="OnButtonPressed"
                    Released="OnButtonReleased"
                    HorizontalOptions="Fill"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="20,10"
                    Margin="0,0,0,10"/>

            <!-- Grid backup -->
            <Grid ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Save backup -->
                <Button Grid.Column="0"
                        Text="Save Backup"
                        SemanticProperties.Hint="Save a backup of your passwords"
                        Clicked="OnSaveBackupClicked"
                        Pressed="OnButtonPressed"
                        Released="OnButtonReleased"
                        HorizontalOptions="Fill"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        CornerRadius="8"
                        Padding="20,10"/>

                <!-- Load backup -->
                <Button Grid.Column="1"
                        Text="Load Backup"
                        SemanticProperties.Hint="Load a backup of your passwords"
                        Clicked="OnLoadBackupClicked"
                        Pressed="OnButtonPressed"
                        Released="OnButtonReleased"
                        HorizontalOptions="Fill"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        CornerRadius="8"
                        Padding="20,10"/>
            </Grid>
        </VerticalStackLayout>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
    </Grid>
</ContentPage>
