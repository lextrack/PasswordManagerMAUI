<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManager.MainPage"
             Title="Password Manager">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="FontAttributes" Value="None"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Margin" Value="5,5"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="BackgroundColor" Value="#007AFF"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- Lista de contraseñas en un ScrollView -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="10" Spacing="15">
                <CollectionView x:Name="PasswordsList"
                        ItemsSource="{Binding Passwords}"
                        SelectionMode="Single"
                        SelectionChanged="OnPasswordSelected"
                        Margin="0,0,0,10">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="No passwords saved yet" HorizontalOptions="Center"/>
                            <Label Text="Click 'Add New Password' to get started" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="8" Padding="10" Margin="0,10" x:Name="PasswordFrame">
                                <Grid ColumnSpacing="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackLayout Grid.Column="0" Spacing="3">
                                        <Label Text="{Binding Service}" FontSize="18" FontAttributes="Bold"/>
                                        <Label Text="{Binding Username}" FontSize="14"/>
                                        <Label Text="{Binding CensoredPassword}" FontSize="14"/>
                                    </StackLayout>

                                    <ImageButton Grid.Column="1"
                                         Source="delete_icon.png"
                                         HeightRequest="24"
                                         WidthRequest="24"
                                         CommandParameter="{Binding .}"
                                         Clicked="OnDeletePasswordClicked"
                                         BackgroundColor="Transparent"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Contenedor de botones en la parte inferior -->
        <VerticalStackLayout Grid.Row="1"
                     Padding="10"
                     Margin="0,5"
                     VerticalOptions="End">
            <Button Text="Add New Password"
            SemanticProperties.Hint="Add a new password entry"
            Style="{StaticResource ActionButtonStyle}"
            Clicked="OnAddPasswordClicked"
            Pressed="OnButtonPressed"
            Released="OnButtonReleased"/>

            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                Text="Save Backup"
                SemanticProperties.Hint="Save a backup of your passwords"
                Style="{StaticResource ActionButtonStyle}"
                Clicked="OnSaveBackupClicked"
                Pressed="OnButtonPressed"
                Released="OnButtonReleased"/>

                <Button Grid.Column="1"
                Text="Load Backup"
                SemanticProperties.Hint="Load a backup of your passwords"
                Style="{StaticResource ActionButtonStyle}"
                Clicked="OnLoadBackupClicked"
                Pressed="OnButtonPressed"
                Released="OnButtonReleased"/>
            </Grid>
        </VerticalStackLayout>

        <!-- Definir las filas en el Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
    </Grid>

</ContentPage>
